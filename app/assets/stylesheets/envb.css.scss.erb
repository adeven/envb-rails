<% unless Envb::Rails.options[:excludes].include?(::Rails.env) %>

@import 'envb_mixins';

<%
env_color = case ::Rails.env
  when 'development'
    '$envb_purple'
  when 'acceptance'
    '$envb_aqua'
  when 'staging'
    '$envb_orange'
  when 'production'
    '$envb_red'
end
%>

// A fixed gray banner used for displaying your current Rails environment name.
//
// .development - Changes banner color to purple.
// .acceptance  - Changes banner color to aqua.
// .staging     - Changes banner color to orange.
// .production  - Changes banner color to red.
//
// No styleguide reference.
html {
  padding-bottom:               25px;

  &:after {
    @include                    colors(<%= env_color %>);

    border-top: {
      style:                    solid;
      width:                    1px;
    }
    bottom:                     0;
    color:                      #fff;
    content:                    '<%= ::Rails.env %>';
    font: {
      family:                   'Helvetica Neue', Helvetica, sans-serif;
      size:                     14px;
      weight:                   bold;
    }
    left:                       0;
    line-height:                24px;
    margin:                     0;
    position:                   fixed;
    text: {
      align:                    center;
      shadow:                   0 1px 1px #000;
      transform:                uppercase;
    }
    width:                      100%;
    z-index:                    100;
    -webkit-font-smoothing:     antialiased;
  }
}

<% end %>
